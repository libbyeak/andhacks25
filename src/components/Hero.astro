---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}"
);
---

<section class="py-20 flex md:flex-row flex-col px-4 md:px-0 gap-10 md:gap-0">
  <div class="flex flex-col gap-6 justify-start items-start md:w-1/2">
    <p class="text-6xl font-bold">Register for</p>
    <p class="text-6xl font-bold"> &hacks XI</p>
    <p>
      Join us September 26-28!
    </p>
    <form action="signup" method="post">
      <input type="email" name="email" placeholder="Enter your email">
      <button type="submit">Register</Button>
    </form>
  </div>
  
  <div class="flex flex-col gap-6 justify-start items-start md:w-1/2">
    <p class="text-6xl font-bold">HEADER AREA</p>
  </div>
</section>
